#:import utils kivy.utils

#:set COLOR_BACKGROUND utils.get_color_from_hex('#0D1B2A')
#:set COLOR_FRAME_BG utils.get_color_from_hex('#1B263B')
#:set COLOR_WIDGET_BG utils.get_color_from_hex('#2A394E')
#:set COLOR_ACCENT utils.get_color_from_hex('#3A96DD')
#:set COLOR_ACCENT_DOWN utils.get_color_from_hex('#2F78B1')
#:set COLOR_TEXT utils.get_color_from_hex('#E0E1DD')
#:set COLOR_TEXT_SECONDARY utils.get_color_from_hex('#A9B4C2')
#:set COLOR_SUCCESS utils.get_color_from_hex('#3C9D7C')
#:set COLOR_BORDER utils.get_color_from_hex('#3A96DD55')


<Card@BoxLayout>:
    canvas.before:
        Color:
            rgba: COLOR_FRAME_BG
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]
    padding: 30
    spacing: 20
    orientation: 'vertical'

<TitleLabel@Label>:
    font_size: '32sp'
    bold: True
    color: COLOR_TEXT
    size_hint_y: None
    height: self.texture_size[1]
    halign: 'center'

<BodyLabel@Label>:
    font_size: '18sp'
    color: COLOR_TEXT_SECONDARY
    halign: 'center'
    valign: 'top'
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]

<PrimaryButton@Button>:
    font_size: '18sp'
    color: COLOR_TEXT
    background_color: [0, 0, 0, 0]
    size_hint_y: None
    height: 55
    canvas.before:
        Color:
            rgba: COLOR_ACCENT if self.state == 'normal' else COLOR_ACCENT_DOWN
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,]
    disabled_color: self.color
    background_disabled_normal: ''
    canvas.after:
        Color:
            rgba: [0, 0, 0, 0.5] if self.disabled else [0, 0, 0, 0]
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,]

<SecondaryButton@Button>:
    font_size: '18sp'
    color: COLOR_TEXT
    background_color: [0, 0, 0, 0]
    size_hint_y: None
    height: 55
    canvas.before:
        Color:
            rgba: COLOR_WIDGET_BG if self.state == 'normal' else COLOR_FRAME_BG
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,]

<FileDropZone@ButtonBehavior+BoxLayout>:
    orientation: 'vertical'
    spacing: 15
    canvas.before:
        Color:
            rgba: COLOR_WIDGET_BG if self.state == 'normal' else COLOR_FRAME_BG
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]
        Color:
            rgba: COLOR_BORDER
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 15)
            width: 1.5
            dash_length: 10
            dash_offset: 10