#:import utils kivy.utils

#:set COLOR_BACKGROUND utils.get_color_from_hex('#0A0F1A')
#:set COLOR_FRAME_BG utils.get_color_from_hex('#1C202E')
#:set COLOR_WIDGET_BG utils.get_color_from_hex('#FFFFFF')
#:set COLOR_ACCENT utils.get_color_from_hex('#00FFFF')
#:set COLOR_ACCENT_DOWN utils.get_color_from_hex('#00CDCD')
#:set COLOR_TEXT utils.get_color_from_hex('#FFFFFF')
#:set COLOR_TEXT_SECONDARY utils.get_color_from_hex('#A9B4C2')
#:set COLOR_BORDER utils.get_color_from_hex('#00FFFF33')
#:set COLOR_SUCCESS utils.get_color_from_hex('#3C9D7C')
#:set COLOR_BUTTON_BG utils.get_color_from_hex('#3A96DD')
#:set COLOR_BUTTON_DOWN utils.get_color_from_hex('#2F78B1')
#:set COLOR_TEXT_DARK utils.get_color_from_hex('#0A0F1A')
#:set COLOR_TEXT_DARK_SECONDARY utils.get_color_from_hex('#555555')


<SelectionCard@ButtonBehavior+BoxLayout>:
    model_name: ''
    is_selected: False
    orientation: 'vertical'
    size_hint_y: None
    height: dp(260)
    padding: 15
    spacing: 10
    on_release: pass

    canvas.before:
        Color:
            rgba: COLOR_FRAME_BG
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]
        Color:
            rgba: COLOR_ACCENT if root.is_selected else [0, 0, 0, 0]
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 15)
            width: dp(1.5)


<Card@BoxLayout>:
    canvas.before:
        Color:
            rgba: COLOR_FRAME_BG
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]
    padding: 30
    spacing: 20
    orientation: 'vertical'

<TitleLabel@Label>:
    font_size: '32sp'
    bold: True
    color: COLOR_TEXT
    size_hint_y: None
    height: self.texture_size[1]
    halign: 'center'

<BodyLabel@Label>:
    font_size: '18sp'
    color: COLOR_TEXT_SECONDARY
    halign: 'center'
    valign: 'top'
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]

<PrimaryButton@Button>:
    font_size: '18sp'
    color: COLOR_TEXT
    background_color: [0, 0, 0, 0]
    size_hint_y: None
    height: 55
    canvas.before:
        Color:
            rgba: COLOR_BUTTON_BG if self.state == 'normal' else COLOR_BUTTON_DOWN
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,]
    disabled_color: self.color
    background_disabled_normal: ''
    canvas.after:
        Color:
            rgba: [0, 0, 0, 0.5] if self.disabled else [0, 0, 0, 0]
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,]

<SecondaryButton@Button>:
    font_size: '18sp'
    color: COLOR_TEXT_DARK
    background_color: [0, 0, 0, 0]
    size_hint_y: None
    height: 55
    canvas.before:
        Color:
            rgba: COLOR_WIDGET_BG if self.state == 'normal' else COLOR_TEXT_SECONDARY
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,]

<FileDropZone@ButtonBehavior+BoxLayout>:
    orientation: 'vertical'
    spacing: 15
    canvas.before:
        Color:
            rgba: COLOR_WIDGET_BG
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]